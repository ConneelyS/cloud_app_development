<p id="notice"><%= notice %></p>

<h1>Doctor Notes</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctor_notes.each do |doctor_note| %>
      <tr>
        <td><%= doctor_note.content %></td>
        <td><%= doctor_note.patient_id %></td>
        <td><%= link_to 'Show', doctor_note %></td>
        <td><%= link_to 'Edit', edit_doctor_note_path(doctor_note) %></td>
        <td><%= link_to 'Destroy', doctor_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

